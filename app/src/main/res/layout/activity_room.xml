<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:padding="16dp">

    <!-- Voice Call Title -->
    <TextView
        android:id="@+id/roomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/voice_call"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Voice Call Button -->
    <Button
        android:id="@+id/voiceSearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/roomTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/start_voice_call"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:backgroundTint="@color/colorPrimaryDark" />

    <!-- Result Text -->
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/voiceSearchButton"
        android:layout_marginTop="30dp"
        android:padding="16dp"
        android:text="@string/result_will_appear_here"
        android:textColor="#000000"
        android:textSize="20sp" />

    <!-- Voice Call Icon -->
    <ImageView
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="101dp"
        android:contentDescription="@string/voice_call"
        android:src="@drawable/ic_voice_call" />

</RelativeLayout>
